			<!-- 0.1 higher than base -->
			<AnimalGatherSpeed>1.1</AnimalGatherSpeed>
			<!-- 0.1 higher than base -->
			<ButcheryFleshSpeed>1.1</ButcheryFleshSpeed>
		</statBases>
		<comps>
		</comps>
