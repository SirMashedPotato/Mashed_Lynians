	<ThingDef ParentName="Mashed_Lynian_Apparel_HeadgearBase" Name="Mashed_Lynian_Apparel_FakeMaskBase" Abstract="True">
		<graphicData>
			<drawSize>0.9</drawSize>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<uiIconScale>1.15</uiIconScale>
		<costStuffCount>30</costStuffCount>
