<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<AbilityGroupDef>
		<defName>Mashed_Lynian_UrukiAbility</defName>
		<cooldownTicks>60000</cooldownTicks>
	</AbilityGroupDef>
	<!-- ==========[Promote growth]==========-->
	<AbilityDef>
		<defName>Mashed_Lynian_PromoteGrowthAbility</defName>
		<label>promote growth</label>
		<description>Use the casters knowledge of plant working to increase the growth of the targeted plant. Increases the growth of the plant by 1% for each level in plants up to level 20. Levels beyond 20 will increase the growth boost by a reduced amount.</description>
		<iconPath>UI/Abilities/Mashed_Uruki_PromoteGrowthAbility</iconPath>
		<groupDef>Mashed_Lynian_UrukiAbility</groupDef>
		<jobDef>CastAbilityOnThingMelee</jobDef>
		<showPsycastEffects>False</showPsycastEffects>
		<displayGizmoWhileUndrafted>True</displayGizmoWhileUndrafted>
		<disableGizmoWhileUndrafted>False</disableGizmoWhileUndrafted>
		<warmupSound>Interact_Sow</warmupSound>
		<uiOrder>1</uiOrder>
		<statBases>
		</statBases>
		<comps>
			<li Class="Mashed_Lynians.CompProperties_PromoteGrowth">
				<growthPerLevel>0.01</growthPerLevel>
				<growthPerOverLevel>0.004</growthPerOverLevel>
				<skillDef>Plants</skillDef>
			</li>
		</comps>
		<verbProperties>
			<drawAimPie>False</drawAimPie>
			<range>-1</range>
			<warmupTime>2</warmupTime>
			<violent>false</violent>
			<verbClass>Mashed_Lynians.Verb_CastAbilityTouch_PromoteGrowth</verbClass>
			<targetParams>
				<canTargetPlants>true</canTargetPlants>
				<canTargetItems>false</canTargetItems>
				<canTargetSelf>false</canTargetSelf>
				<canTargetPawns>false</canTargetPawns>
				<canTargetMechs>false</canTargetMechs>
				<canTargetBuildings>false</canTargetBuildings>
				<mustBeSelectable>true</mustBeSelectable>
				<mapObjectTargetsMustBeAutoAttackable>false</mapObjectTargetsMustBeAutoAttackable>
			</targetParams>
		</verbProperties>
	</AbilityDef>
	<!-- ==========[Mashed_Lynian_LynianFarmingFurrenzy]==========-->
	<AbilityDef ParentName="Mashed_Lynian_SelfBuffBase">
		<defName>Mashed_Lynian_LynianFarmingFurrenzyAbility</defName>
		<label>farming furrenzy</label>
		<description>Reach back through time, recollecting every piece of advice given to this Lynian about farming, enhancing their plant work speed beyond its normal limit in the process.</description>
		<iconPath>UI/Abilities/Mashed_Lynian_FarmingFurrenzy</iconPath>
		<groupDef>Mashed_Lynian_FelyneAbility</groupDef>
		<warmupStartSound>CombatCommand_Warmup</warmupStartSound>
		<warmupMoteSocialSymbol>UI/Abilities/Mashed_Lynian_FarmingFurrenzy</warmupMoteSocialSymbol>
		<statBases>
		  <Ability_Duration>250</Ability_Duration>
		</statBases>
		<comps>
			<li Class="CompProperties_AbilityGiveHediff">
				<compClass>CompAbilityEffect_GiveHediff</compClass>
				<hediffDef>Mashed_Lynian_LynianFarmingFurrenzy</hediffDef>
				<onlyBrain>True</onlyBrain>
				<onlyApplyToSelf>True</onlyApplyToSelf>
				<replaceExisting>true</replaceExisting>
			</li>
		</comps>
	</AbilityDef>
</Defs>